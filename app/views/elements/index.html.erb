<h1>Listing elements</h1>

<table>
  <tr>
    <th>Bitmap</th>
    <th>Caption</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @elements.each do |element| %>
  <tr>
    <td><%= image_tag url_for(:controller => "elements", :action => "show_bitmap", :id => element.id) %></td>
    <td><%= element.caption %></td>
    <td><%= link_to 'Show', element %></td>
    <td><%= link_to 'Edit', edit_element_path(element) %></td>
    <td><%= link_to 'Destroy', element, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

